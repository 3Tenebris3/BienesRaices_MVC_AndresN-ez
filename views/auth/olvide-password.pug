extends ../layout/index

block contenido
    .py-5
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold.mb-10= pagina
        
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        else if mensaje
            div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
                p.bg-green-500.py-2.px-5.rounded-lg.w-full.font-bold.text-center.text-white.uppercase= mensaje

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvide-password")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="correo") Correo :
                        input#correo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu correo" type="email" name="correo")
                    div.flex.items-left
                        a(href="/auth/login" class="text-gray-500 text-xs hover:text-indigo-700") ¿Todo listo? Prueba a inicia sesión
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer rounded-lg" type="submit" value="Enviar correo de recuperación")