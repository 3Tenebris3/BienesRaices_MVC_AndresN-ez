extends ../layout/index

block contenido
    .py-5
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina
        
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow-xl.rounded-md
                form.space-y-5(method="POST" action="/auth/registro")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre : 
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nombre" name="nombre" type="text" value= usuario ? usuario.nombre:'')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="apellido") Apellido : 
                        input#apellido.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu apellido" type="text" name="apellido" value= usuario ? usuario.apellido:'')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="correo") Correo :
                        input#correo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu correo" type="email" value= usuario ? usuario.correo : '' name="correo")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="validarCorreo") Confirmar Correo :
                        input#validarCorreo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Vuelve a escribir tu correo" type="email" name="validarCorreo")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="contraseña") Contraseña :
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu contraseña" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetirPassword") Confirma tu Contraseña :
                        input#validarPassword.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite la contraseña" type="password" name="validarPassword")

                    div.flex.items-center.justify-between
                        a(href="/auth/login" class="text-gray-500 text-xs hover:text-indigo-700") ¿Ya tienes cuenta? Inicia Sesión
                        a(href="/auth/olvide-password" class="text-gray-500 text-xs hover:text-indigo-700") Olvide mi Contraseña

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer rounded-lg" type="submit" value="Crear Cuenta")